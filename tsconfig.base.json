{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@morajlab/npm.config.nextjs": ["packages/config/nextjs/src/index.ts"],
      "@morajlab/npm.config.prettier": [
        "packages/config/prettier/src/index.ts"
      ],
      "@morajlab/npm.config.typescript": [
        "packages/config/typescript/src/index.ts"
      ],
      "@morajlab/npm.config.webpack": ["packages/config/webpack/src/index.ts"],
      "@morajlab/npm.mjw.runner": ["packages/mjw/runner/src/index.ts"],
      "@morajlab/npm.mjw.types": ["packages/mjw/types/src/index.ts"],
      "@morajlab/npm.react.components": [
        "packages/react/components/src/index.ts"
      ],
      "@morajlab/npm.react.components.bare": [
        "packages/react/components/src/lib/bare/bare/src/index.ts"
      ],
      "@morajlab/npm.react.styles.common": [
        "packages/react/styles/common/src/index.ts"
      ],
      "@morajlab/npm.react.types.common": [
        "packages/react/types/common/src/index.ts"
      ],
      "@morajlab/npm.react.utils.merge-props": [
        "packages/react/utils/merge-props/src/index.ts"
      ],
      "@morajlab/npm.react.utils.style": [
        "packages/react/utils/style/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
